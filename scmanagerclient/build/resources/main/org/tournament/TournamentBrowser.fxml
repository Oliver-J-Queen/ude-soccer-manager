<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="780.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.tournament.TournamentController">
   <children>
      <TableView fx:id="table" layoutX="14.0" layoutY="75.0" prefHeight="616.0" prefWidth="972.0">
        <columns>
          <TableColumn fx:id="col_name" editable="false" prefWidth="244.0" text="Tournament Name" />
          <TableColumn fx:id="col_currentplayers" editable="false" minWidth="0.0" prefWidth="105.0" text="Player Count" />
            <TableColumn fx:id="col_mode" editable="false" prefWidth="171.0" text="Mode" />
            <TableColumn fx:id="col_fee" editable="false" prefWidth="263.0" text="Sign Up Fee" />
            <TableColumn fx:id="colBtn" editable="false" prefWidth="188.0" text="Join Tournament" />
        </columns>
      </TableView>
      <Label layoutX="26.0" layoutY="718.0" prefHeight="36.0" prefWidth="463.0" text="Or do you want to create your own Tournament?">
         <font>
            <Font size="21.0" />
         </font>
      </Label>
      <Button fx:id="open_TOURNAMENTCREATION" layoutX="915.0" layoutY="724.0" mnemonicParsing="false" onAction="#openTournamentCreation" prefHeight="25.0" prefWidth="71.0" text="CREATE" />
      <Label layoutX="26.0" layoutY="14.0" prefHeight="52.0" prefWidth="672.0" text="Looking for a Challenge? To join of the Tournaments, just click them.">
         <font>
            <Font size="22.0" />
         </font>
      </Label>
      <Button fx:id="refresh" layoutX="925.0" layoutY="28.0" mnemonicParsing="false" onAction="#refresh" text="Refresh" />
      <Label fx:id="JoinStatus" layoutX="26.0" layoutY="701.0" prefHeight="17.0" prefWidth="450.0" />
   </children>
</AnchorPane>
